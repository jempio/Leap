<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFDFCB">


    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:id="@+id/topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/active_goals" />


    <Button
        app:layout_constraintRight_toRightOf="@id/topbar"
        app:layout_constraintTop_toTopOf="@id/topbar"
        android:id="@+id/completed_button"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:alpha="0"
        android:text="" />

    <Button
        app:layout_constraintLeft_toLeftOf="@id/topbar"
        app:layout_constraintTop_toTopOf="@id/topbar"
        android:id="@+id/active_button"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:alpha="0"
        android:text="" />

    <ImageView
        android:id="@+id/top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/orange_bar" />

    <TextView
        android:id="@+id/goal_leap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leap!"
        android:textColor="#523E32"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        app:layout_constraintTop_toTopOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:id="@+id/currency_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/currencyimage" />

    <TextView
        app:layout_constraintLeft_toLeftOf="@id/currency_bg"
        app:layout_constraintRight_toRightOf="@id/currency_bg"
        app:layout_constraintTop_toTopOf="@id/currency_bg"
        app:layout_constraintBottom_toBottomOf="@id/currency_bg"
        android:id="@+id/flies"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/addGoalsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="300dp"
        android:background="@drawable/plus_sign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/completed_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/Recent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="25dp"
            android:text="Recent"
            android:textColor="#523e32"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/task1"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tasksbutton"
            android:paddingLeft="20dp"
            android:text="Apply to University of Toronto"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#523e32"
            android:textSize="16sp"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/complete_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Completed March 7, 2:20 PM"
            android:textColor="#523e32"
            android:textSize="20sp"
            android:textStyle="italic"
            android:typeface="sans" />

        <Button
            android:id="@+id/task2"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/tasksbutton"
            android:paddingLeft="20dp"
            android:text="Meet with Career Counselor"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#523e32"
            android:textSize="16sp"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/complete_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Completed March 2, 2:20 PM"
            android:textColor="#523e32"
            android:textSize="20sp"
            android:textStyle="italic"
            android:typeface="sans" />

        <Button
            android:id="@+id/task3"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/tasksbutton"
            android:paddingLeft="20dp"
            android:text="Choose a program of study"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#523e32"
            android:textSize="16sp"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/complete_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Completed January 29, 1:00 AM"
            android:textColor="#523e32"
            android:textSize="20sp"
            android:textStyle="italic"
            android:typeface="sans" />

        <Button
            android:id="@+id/task4"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/tasksbutton"
            android:paddingLeft="20dp"
            android:text="Achieve a 99% in AP Calculus 12"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#523e32"
            android:textSize="16sp"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/complete_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Completed December 31, 2:20 PM"
            android:textColor="#523e32"
            android:textSize="20sp"
            android:textStyle="italic"
            android:typeface="sans" />

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/active_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/arthur"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arthurempty" />

        <TextView
            android:id="@+id/arthur_text"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:text="You donâ€™t have any current goals! Press the add button on the top right to get started!"
            app:layout_constraintLeft_toLeftOf="@id/arthur"
            app:layout_constraintTop_toTopOf="@id/arthur"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="145dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>