<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".title_2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

        <ImageView
            android:id="@+id/whiteTextbox"
            android:layout_width="243dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginBottom="85dp"
            app:srcCompat="@drawable/text_box" />

        <ImageView
            android:id="@+id/frogOpen"
            android:layout_width="125dp"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/fwog_w_mouf_open" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:text=" Welcome. \n I'm Arthur!"
            android:textColor="#1A1616"
            android:textSize="26sp"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:text="tap to continue..."
            android:textColor="#D53A3939"
            android:textSize="18dp"
            android:textStyle="italic"
            android:typeface="sans" />

        <Button
            android:id="@+id/to_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:visibility="visible" />


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>