<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFDFCB">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/top_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/orange_bar" />

            <TextView
                android:id="@+id/goal_leap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leap!"
                android:textColor="#523E32"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                app:layout_constraintTop_toTopOf="@id/top_bar"
                app:layout_constraintBottom_toBottomOf="@id/top_bar"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:id="@+id/currency_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/currencyimage" />

            <TextView
                app:layout_constraintLeft_toLeftOf="@id/currency_bg"
                app:layout_constraintRight_toRightOf="@id/currency_bg"
                app:layout_constraintTop_toTopOf="@id/currency_bg"
                app:layout_constraintBottom_toBottomOf="@id/currency_bg"
                android:id="@+id/flies"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="#000000"/>


            <Button
                android:id="@+id/graduationPlan_button"
                android:layout_width="175dp"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/top_bar"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/planbutton"
                android:drawableTop="@drawable/graduationhat"
                android:gravity="bottom"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="Graduation"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FF6D6D"
                android:textSize="20sp"
                android:paddingTop="50dp"
                android:paddingBottom="40dp"/>

            <Button
                android:id="@+id/postSecondaries_button"
                android:layout_width="175dp"
                android:layout_height="200dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/graduationPlan_button"
                android:layout_marginRight="15dp"
                android:background="@drawable/planbutton"
                android:drawableTop="@drawable/postsecondaries"
                android:gravity="bottom"
                android:text="Post\nSecondaries"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FF6D6D"
                android:textSize="20sp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"/>

            <Button
                android:id="@+id/plan3"
                android:layout_width="175dp"
                android:layout_height="200dp"
                app:layout_constraintLeft_toLeftOf="@id/graduationPlan_button"
                app:layout_constraintTop_toBottomOf="@id/graduationPlan_button"
                android:layout_marginTop="10dp"
                android:background="@drawable/planbutton"
                android:drawableTop="@drawable/application"
                android:gravity="bottom"
                android:text="Assesments"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FF6D6D"
                android:textSize="20sp"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"/>

            <Button
                android:id="@+id/courses_button"
                android:layout_width="175dp"
                android:layout_height="200dp"
                android:background="@drawable/planbutton"
                android:drawableTop="@drawable/courses"
                android:gravity="bottom"
                app:layout_constraintLeft_toLeftOf="@id/postSecondaries_button"
                app:layout_constraintTop_toTopOf="@id/plan3"
                android:text="Courses"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FF6D6D"
                android:textSize="20sp"
                android:paddingTop="50dp"
                android:paddingBottom="40dp"/>

            <Button
                android:id="@+id/homework_button"
                android:layout_width="175dp"
                android:layout_height="200dp"
                android:background="@drawable/planbutton"
                app:layout_constraintTop_toBottomOf="@id/plan3"
                app:layout_constraintLeft_toLeftOf="@id/plan3"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:text="Homework"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="#FF6D6D"
                android:textSize="20sp"
                android:drawableTop="@drawable/homework"
                android:paddingTop="50dp"
                android:paddingBottom="40dp"/>

            <Button
                android:id="@+id/plan6"
                android:layout_width="175dp"
                android:layout_height="200dp"
                android:background="@drawable/planbutton"
                app:layout_constraintTop_toTopOf="@id/homework_button"
                app:layout_constraintLeft_toLeftOf="@id/courses_button"
                android:gravity="bottom"
                android:paddingBottom="40dp"
                android:text="Volunteering"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="#FF6D6D"
                android:textSize="20sp"
                android:drawableTop="@drawable/volunteering"
                android:paddingTop="50dp"/>

            <Button
                android:id="@+id/plan7"
                android:layout_width="175dp"
                android:layout_height="200dp"
                android:background="@drawable/planbutton"
                app:layout_constraintTop_toBottomOf="@id/homework_button"
                app:layout_constraintLeft_toLeftOf="@id/homework_button"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:paddingBottom="40dp"
                android:text="Applications"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="#FF6D6D"
                android:textSize="20sp"
                android:drawableTop="@drawable/applications"
                android:paddingTop="40dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</RelativeLayout>