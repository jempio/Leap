<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFDFCB">


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:text="Calendar"
        android:textColor="#523e32"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/home_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/month_text"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="March"
        android:textColor="#523e32"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        app:layout_constraintTop_toBottomOf="@+id/month_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/calendar" />
    
    <ImageView
        android:id="@+id/calendar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        app:layout_constraintLeft_toRightOf="@id/home_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/calendar_icon" />

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/arthur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fwog" />

    <Button
        app:layout_constraintLeft_toRightOf="@id/month_text"
        app:layout_constraintTop_toTopOf="@id/month_text"
        app:layout_constraintBottom_toBottomOf="@id/month_text"
        android:layout_marginLeft="10dp"
        android:id="@+id/mar_button"
        android:background="@drawable/forward_arrow"
        android:layout_width="25dp"
        android:layout_height="30dp" />

    <Button
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@id/month_text"
        app:layout_constraintRight_toLeftOf="@id/month_text"
        app:layout_constraintTop_toTopOf="@id/month_text"
        android:id="@+id/feb_button"
        android:background="@drawable/back_arrow"
        android:layout_width="25dp"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/pastReflection_button"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:alpha="0"
        android:background="@color/cardview_shadow_end_color"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/calendar" />


</androidx.constraintlayout.widget.ConstraintLayout>